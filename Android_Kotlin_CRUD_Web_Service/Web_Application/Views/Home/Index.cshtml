@{
    ViewData["Title"] = "My Web Application";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <!-- Add Button -->
            <a href="@Url.Action("Add", "Home")" class="btn btn-primary btn-block">
                Add
            </a>
        </div>
        <div class="col-md-4">
            <!-- Get All Button -->
            <a href="@Url.Action("ViewAll", "Home")" class="btn btn-success btn-block">
                Get All
            </a>
        </div>
        <div class="col-md-4">
            <!-- Fetch All Button -->
            <a href="@Url.Action("FetchAll", "Home")" class="btn btn-info btn-block">
                Fetch All
            </a>
        </div>
    </div>
</div>
