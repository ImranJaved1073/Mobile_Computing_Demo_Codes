@{
    ViewData["Title"] = "Student Application";
}

<h2 class="text-3xl font-bold text-center mt-8">@ViewData["Title"]</h2>

<div class="container mx-auto mt-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Add Button -->
        <a href="@Url.Action("Add", "Home")" class="bg-blue-600 text-white py-3 px-4 rounded-lg text-center shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 ease-in-out">
            Add
        </a>

        <!-- Get All Button -->
        <a href="@Url.Action("ViewAll", "Home")" class="bg-green-600 text-white py-3 px-4 rounded-lg text-center shadow-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-200 ease-in-out">
            Get All
        </a>

        <!-- Fetch All Button -->
        <a href="@Url.Action("FetchAll", "Home")" class="bg-teal-600 text-white py-3 px-4 rounded-lg text-center shadow-md hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition duration-200 ease-in-out">
            Fetch All
        </a>
    </div>
</div>
